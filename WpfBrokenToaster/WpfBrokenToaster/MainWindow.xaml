<Window x:Class="WpfBrokenToaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Broken Toaster 9000" Height="350" Width="525">
    <Grid>
        <CheckBox x:Name="chkBreakToaster" Content="Break Toaster" HorizontalAlignment="Left" Margin="200,13,0,0" VerticalAlignment="Top" Unchecked="chkBreakToaster_Unchecked" Checked="chkBreakToaster_Checked"/>
        <Button x:Name="btnFillToaster" Content="Fill Toaster" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnFillToaster_Click"/>
        <Button x:Name="btnToast" Content="Toast" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="75" />
        <ScrollViewer HorizontalAlignment="Left" Margin="10,35,0,0"  VerticalAlignment="Top" 
                   Height="274" Width="497">
            <TextBlock x:Name="tbToaster" TextWrapping="Wrap" Text="" />
        </ScrollViewer>

    </Grid>
</Window>
